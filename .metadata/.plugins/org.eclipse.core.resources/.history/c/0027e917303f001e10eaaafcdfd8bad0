import java.util.Scanner;

public class Temperaturecinversionapp {
	public static void main(String[] args) 
    {
	Scanner scan= new Scanner(System.in);
	System.out.println("welcom to the temperature conversion tool");
	System.out.println("select an option:");
	System.out.println("1.celcioous to fahreneit");
	System.out.println("2.fahreniet to celcious");
	System.out.println("enter your choice");
	int num=scan.nextInt();
	scan.close();
	switch(num)
	{
	case 1:		
		System.out.println("enter the temperature in celcius");
		double celsius=scan.nextDouble();
		method Method=new method();
		double F=Method.celsiusToFahrenheit(celsius);
		System.out.println(celsius+"C is equivalent to "+F+"F");
		System.out.println("-------------------------------");
		break;
	case 2:
		System.out.println("enter the temperature in fahrenheit");
		double fahrenheit=scan.nextDouble();
		method MethoD=new method();
		double C=MethoD.fahrenheitToCelsius(fahrenheit);
		System.out.println(fahrenheit+"F is equivalent to "+C+"C");
		System.out.println("--------------------------------");
		break;
	}
    }
}